extends ../layout

block content
  .row
    .col-md-8.col-sm-12
      h1 Vagas
      table.table.table-stripped.table-hover
        thead
          tr
            th Nome do setor
            th Identificação da vaga
            th.center Estado da vaga
            th.actions Ações
        tbody
          for box in boxes
            tr
              td foo bar
              td Box #{box.id} (Drone #{box.droneId})
              td.center= (box.occupied) ? 'Ocupado' : 'Livre'
              td.actions
                a(href="/boxes/delete/#{box._id}").btn.btn-xs: i.glyphicon.glyphicon-trash

    .col-md-4
      h2 Ações
      ul.nav.nav-pills.nav-stacked
        li(role="presentation").active
          a(href="/boxes/index"): i.glyphicon.glyphicon-list: |&nbsp;Listar
