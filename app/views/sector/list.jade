extends ../layout

block content
  .row
    .col-md-8.col-sm-12
      h1 Setores
      table.table.table-stripped.table-hover
        thead
          tr
            th.right Id
            th Nome do setor
            th.right Total de vagas
            th.actions Ações
        tbody
          for sector in sectors
            td.right= sector.id
            td= sector.name
            td.right= sector.boxes.length
            td.actions
              a(href="/sector/view/#{sector.id}").btn.btn-xs: i.glyphicon.glyphicon-eye-open
              a(href="/sector/edit/#{sector.id}").btn.btn-xs: i.glyphicon.glyphicon-pencil
              a(href="/sector/delete/#{sector.id}").btn.btn-xs: i.glyphicon.glyphicon-trash

    .col-md-4
      h2 Ações
      ul.nav.nav-pills.nav-stacked
        li(role="presentation").active
          a(href="/sector/index"): i.glyphicon.glyphicon-list: |&nbsp;Listar
        li(role="presentation")
          a(href="/sector/add"): i.glyphicon.glyphicon-plus-sign: |&nbsp;Adicionar
